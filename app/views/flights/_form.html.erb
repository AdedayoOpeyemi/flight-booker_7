<%= simple_form_for :search, url: flights_search_path, method: "GET", html: { class: 'form-inline', novalidate: true } do |f| %>
    <%= f.input :departure_airport,
    collection: airports,
    label_method: :display_name_with_code,
    value_method: :code,
    prompt: "Select departure airport", 
    selected: (@search_data.present? ? @search_data[:departure_airport] : nil) %>

    <%= f.input :arrival_airport,
    collection: airports,
    label_method: :display_name_with_code,
    value_method: :code,
    prompt: "Select arrival airport",
    selected: (@search_data.present? ? @search_data[:arrival_airport] : nil) %>

    <%= f.input :passenger_count,
    collection: 0..20,
    prompt: "Number of passengers",
    selected: (@search_data.present? ? @search_data[:passenger_count] : nil)  %>

    <%= f.input :date,
    collection: days,
    include_blank: true,
    selected: (@search_data.present? ? @search_data[:date] : nil)  %>

    <%= f.submit "Find", class: "btn btn-primary" %>
<% end %>